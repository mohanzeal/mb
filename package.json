{
  "name": "mb",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.1.1",
  "devDependencies": {
    "@vue/cli-plugin-eslint": "~4.5.0",
    "concurrently": "^6.4.0",
    "eslint": "^7.11.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "dev": "concurrently -n 'server,veutify' -c 'red,yellow' 'yarn http-client dev' 'yarn vuetify serve'",
    "http-client": "yarn workspace @mb/http-client",
    "vuetify": "yarn workspace @mb/vuetify",
    "build": "yarn workspaces foreach run build"
  },
  "dependencies": {
    "@yarnpkg/pnpify": "^3.1.1-rc.6",
    "node-gyp": "^8.4.1"
  }
}
