{
  "name": "@mb/server",
  "version": "1.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "@yarnpkg/pnpify": "^3.0.0-rc.6",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.4"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "scripts": {
    "dev": "ts-node-dev --debug --respawn --transpile-only --exit-child ./src/index.ts",
    "lint": "eslint --ext .js,.ts .",
    "lint-fix": "yarn lint --fix",
    "format": "prettier --write \"src/**/*.+(js|ts|json)\""
  }
}