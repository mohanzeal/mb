{
  "name": "@mb/http-client",
  "version": "1.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,json,md}": [
      "prettier --write"
    ],
    "*": [
      "yarn lint",
      "yarn test"
    ]
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child ./src/index.ts",
    "lint-staged": "echo 'HTTP-CLIENT: running lint-staged -------'  && lint-staged",
    "test": "echo 'no tests in http-client'",
    "lint": "eslint --ext .js,.ts .",
    "lint-fix": "yarn lint --fix",
    "format": "prettier --write \"src/**/*.+(js|ts|json)\""
  }
}